---
import logo from "../assets/MLP logo.svg";
import switchboard1 from "../assets/gallery/switchboard\-1.jpg";
import switchboard2 from "../assets/gallery/switchboard\-2.jpg";
import switchboard3 from "../assets/gallery/switchboard\-3.jpg";
import lift from "../assets/gallery/operate\-lift.jpg";
import power from "../assets/gallery/install\-powerline.jpg";
import light from "../assets/gallery/install\-streetlight.jpg";
---

<section id="gallery">
  <img src={switchboard1.src} />
  <img src={switchboard2.src} />
  <img src={switchboard3.src} />
  <img src={lift.src} />
  <img src={power.src} />
  <img src={light.src} />
</section>

<style>
  #gallery {
    background: #0a3351;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    row-gap: 3rem;
    gap: 3rem;
    padding: 4rem;
  }

  img {
    display: block;
    border: 4px solid #061e2f;
    background-color: rgb(255, 255, 255);
    width: 20.333125rem;
    height: 21.875rem;
  }
</style>
