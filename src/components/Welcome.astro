---
import background from "../assets/background.svg";
---

<div id="container">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <main>
    <section id="body">
      <h1 class="name">
        <span>Modern Light & Power</span>
        <p class="contact">All electrical work for home & business</p>
      </h1>
      <h1 class="construction">
        <span style="letter-spacing:0.1em;">
          UNDER
          <br />
          CONSTRUCTION
        </span>
      </h1>
      <p class="contact">
        <span>Contact</span>
        <br />
        <span>modernlightpower@gmail.com</span>
        <br />
        <span>03 97004077</span>
      </p>
    </section>
  </main>
</div>

<style>
  main {
    margin: auto;
    height: 100%;
    display: flex;
    justify-content: center;
    padding: auto;
  }

  #body {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .name {
    font-size: 3.4rem;
    margin: 0.25rem;
    text-align: center;
  }

  .construction {
    text-align: center;
    font-size: 2.4rem;
    margin-top: 0.25rem;
    text-align: center;
  }

  .contact {
    font-size: 1.5rem;
    margin: 0 0 1em;
    text-align: center;
    font-weight: normal;
    color: #111827;
  }

  @media screen and (min-width: 636px) {
    .name {
      font-size: 4rem;
    }

    .contact {
      font-size: 1.6rem;
    }
  }

  .image {
    position: relative;
    width: 6em;
    height: 6em;
    align-self: center;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  #container {
    font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
      Arial, sans-serif;
    height: 100%;
  }
</style>
